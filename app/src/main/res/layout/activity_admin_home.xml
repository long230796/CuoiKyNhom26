<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nhom26.cuoikynhom26.Activities.AdminHomeActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="560dp">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:id="@+id/layoutNL">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_grain_sack"
                            android:id="@+id/imageView"
                            android:layout_gravity="center" />

                        <TextView
                            android:text="Danh sách nguyên liệu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:textColor="@android:color/background_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:id="@+id/layoutLoai">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_widget"
                            android:id="@+id/imageView"
                            android:layout_gravity="center" />

                        <TextView
                            android:text="Phân loại món ăn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:textColor="@android:color/background_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:id="@+id/layoutFood">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_rice_bowl"
                            android:id="@+id/imageView"
                            android:layout_gravity="center" />

                        <TextView
                            android:text="Danh sách món ăn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:textColor="@android:color/background_dark" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="normal|bold"
                            android:layout_marginBottom="15dp"
                            android:text="Thông tin người dùng"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_width="300dp"
                        android:layout_gravity="center"
                        android:background="@drawable/textview_border_thin_bggray">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="100dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_user_svgrepo_com"
                                android:id="@+id/imageView5"
                                android:layout_weight="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp">

                                <TextView
                                    android:text="Tên người dùng"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView17"
                                    android:textSize="14dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:id="@+id/txtTenUser"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">
                                <TextView
                                    android:text="Số điện thoại"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:id="@+id/txtPhone"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:text="Danh sách ưa thích"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/btn_uathich"
                                    android:layout_weight="1"
                                    android:textSize="14dp"/>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Đăng xuất"
                                    android:layout_weight="1"
                                    android:textSize="14dp"
                                    android:id="@+id/txtLogout"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </TabHost>


</LinearLayout>
